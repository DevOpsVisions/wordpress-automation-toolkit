{
  "metadata": [
    {
      "src": [
        {
          "files": [
            "src/**/*.cs"
          ],
          "exclude": [
            "**/bin/**",
            "**/obj/**"
          ]
        }
      ],
      "dest": "api",
      "properties": {
        "TargetFramework": "net8.0"
      }
    }
  ],
  "build": {
    "content": [
      {
        "files": [
          "articles/**.md",
          "toc.yml",
          "*.md"
        ]
      }
    ],
    "resource": [
      {
        "files": [
          "styles/**",
          "images/**"
        ]
      }
    ],
    "overwrite": [
      {
        "files": [
          "apidoc/**.md"
        ]
      }
    ],
    "dest": "_site",
    "globalMetadata": {
      "_appTitle": "WordPress Learning Automation Toolkit",
      "_appFooter": "Â© 2023 DevOpsVisions"
    },
    "template": [
      "default",
      "templates/custom"
    ]
  }
}
